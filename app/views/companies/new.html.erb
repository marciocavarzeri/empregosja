<section>
	<h1>Criar uma empresa</h1>
	<%= form_for @company do |f| %>
		<div class="form-group">
			<%=f.label :name, 'Nome'%>:
			<%=f.text_field :name, class: 'form-control', placeholder: 'Nome da empresa' %>
		</div>
		<div class="form-group">
			<%=f.label :location, 'Local'%>:
			<%=f.text_field :location, class: 'form-control', placeholder: 'SÃ£o Paulo, Rio de Janeiro...'%>
		</div>
		<div class="form-group">
			<%=f.label :mail, 'Email'%>:
			<%=f.text_field :mail, class: 'form-control', placeholder: 'exemplo@exemplo.com.br'%>
		</div>
		<div class="form-group">
			<%=f.label :phone, 'Telefone'%>:
			<%=f.text_field :phone, class: 'form-control', placeholder: '(xx) xxxxx-xxxx'%>
		</div>
		<div>
			<%= link_to 'Voltar', root_path, class: 'btn btn-default' %>
			<%= f.submit 'Criar Empresa', class: 'btn btn-default' %>
		</div>
	<% end %>

</section>

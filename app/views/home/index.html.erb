<div class="row">
	<div class="col-md-9">
		<section>
			<div class="row">
				<% @jobs.each do |job| %>
					<div class="col-md-6">
            <%= render job%>
					</div>
				<% end %>
			</div>
		</section>
	</div>
	<div class="col-md-3">
		<aside>
			<h4 class="list-group-item active">Empresas</h4>
			<div class="list-group table-of-contents">
				<% @companies.each do |company| %>
					<%= link_to company.name, company, class: 'list-group-item' %>
				<% end %>
			</div>
			<h4 class="list-group-item active">Categorias</h4>
			<div class="list-group table-of-contents">
				<% @categories.each do |category| %>
					<%= link_to category.name, category, class: 'list-group-item'%>
				<% end %>
			</div>
		</aside>
	</div>
</div>

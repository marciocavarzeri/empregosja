<%= simple_form_for @job do |f| %>
  <%= f.input :title, label: 'Título', placeholder: 'Descrição da Vaga' %>
  <%= f.input :location, label: 'Local', placeholder: 'São Paulo, Rio de Janeiro...' %>
  <%=f.input :category_id, label: 'Categoria', collection: @categories %>
  <%=f.input :company_id, label: 'Empresa', collection: @companies %>
  <%= f.input :description, label: 'Descrição', as: :text %>
  <%= f.input :featured, label: 'Destaque', as: :boolean %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-default' %>
  <%= f.button :submit, submit_text %>
<% end %>

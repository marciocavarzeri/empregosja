<%= form_for @job do |f| %>
	<div class="form-group">
		<%=f.label :title, 'Título'%>:
		<%=f.text_field :title, class: 'form-control', placeholder: 'Nome do anúncio da vaga'%>
	</div>
	<div class="form-group">
		<%=f.label :location, 'Local'%>:
		<%=f.text_field :location, class: 'form-control', placeholder: 'São Paulo, Rio de Janeiro...'%>
	</div>
	<div class="form-group">
		<%=f.label :category_id, 'Categoria'%>:
		<%=f.collection_select(:category_id, @categories, :id, :name, {}, class: 'form-control')%>
	</div>
	<div class="form-group">
		<%=f.label :company_id, 'Empresa'%>:
		<%= f.collection_select(:company_id, @companies, :id, :name, {}, class: 'form-control') %>
	</div>
	<div class="form-group">
		<%=f.label :description, 'Descrição'%>:
		<%=f.text_field :description, class: 'form-control'%>
	</div>
	<div class="form-group">
		<%= f.label :featured, 'Destaque' %>
		<%= f.check_box :featured %>
	</div>
	<div>
		<%= link_to 'Voltar', root_path, class: 'btn btn-default' %>
		<%=f.submit submit_text, class: 'btn btn-default' %>
	</div>
<% end %>
